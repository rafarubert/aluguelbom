<% form_tag sessao_path do -%>
<%= label_tag 'login' %>
<%= text_field_tag 'login', @login %>

<%= label_tag 'password' %>
<%= password_field_tag 'password', nil %>

<%= check_box_tag 'remember_me', '1', @remember_me, :class => 'lembrar' %>
<%= label_tag 'remember_me', 'Mantenha-me conectado', :class => 'label_checkbox' %>

<%= submit_tag 'Entrar', :class=>'botao' %>
<% end -%>
